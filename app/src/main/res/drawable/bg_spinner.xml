<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary"/>
                    <padding android:bottom="0dp" android:left="6dp" android:right="10dp" android:top="0dp" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@android:drawable/arrow_down_float" android:tint="@color/colorPrimaryDark" />
            </item>
        </layer-list>
    </item>
</selector>